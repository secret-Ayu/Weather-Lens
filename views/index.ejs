                                            </select>

                                        </div>
                                        <div>
                                            
                                            <input style="width: 237px; text-align: center;" class="city" type="text"
                                                name="city" id="" placeholder="City Name">
                                        </div>
                                        <div>
                                            <button style="width: 237px;" type="submit" class="location-button">
                                                <span>Find Weather
                                                </span></button>
                                        </div>
                                    </form>
                                </div>
                               
                            </div>
                        </div>
                    </div>

                </div>

            </div>








            <div class="col-md-12 col-lg-12 col-xl-6 margin1">

                <div class="card margin2" style="border-radius: 10px;  ">
                    <div class="bg-image ripple" data-mdb-ripple-color="light"
                        style="border-top-left-radius: 10px; border-top-right-radius: 10px;">
                        <h1 style="text-align: center;"> Weather Report</h1>
                        
                        <div class="mask" style="background-color:  #3693e5">
                            
                            <div class="text-center text-white">
                                <p class="h3 mb-4">
                                    <%=day%>
                                </p>
                                
                                <p class="h3 mb-4">
                                    <%=desc%>
                                </p>
                                <p class="h5 mb-4">
                                    <%=city%>, IN
                                </p>
                                <p class="display-2"><strong>
                                        <%=temp%>°C
                                    </strong> </p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-4 text-center">
                        <a href="#!" class="text-body"><i class="fas fa-chevron-up fa-lg mb-4"></i></a>
                        <div class="d-flex justify-content-between mb-3">
                            <p class="h5 fw-normal">VISIBILITY</p>
                            <p class="h5 fw-normal"><i class="fas fa-sun pe-2"></i>
                                <%=visi%>m
                            </p>
                        </div>
                        <div class="d-flex justify-content-between" style="color: #fc9504;">
                            <p class="h5 fw-normal">HUMIDITY</p>
                            <p class="h5 fw-normal"><i class="fas fa-cloud pe-2"></i>
                                <%=humidity%> %
                            </p>
                        </div>
                        <div class="d-flex justify-content-between" style="color: #fc9504;">
                            <p class="h5 fw-normal">WIND</p>
                            <p class="h5 fw-normal"><i class="fas fa-cloud pe-2"></i>
                                <%=speed%> km/h
                            </p>
                        </div>
                        <div class="d-flex justify-content-between" style="color: #fc9504;">
                            <p class="h5 fw-normal">SUNRISE</p>
                            <p class="h5 fw-normal"><i class="fas fa-cloud pe-2"></i>
                                <%=sunrise%>
                            </p>
                        </div>
                        <div class="d-flex justify-content-between" style="color: #fc9504;">
                            <p class="h5 fw-normal">SUNSET</p>
                            <p class="h5 fw-normal"><i class="fas fa-cloud pe-2"></i>
                                <%=sunset%>
                            </p>
                        </div>
                        <div class="d-flex justify-content-between" style="color: #fc9504;">
                            <p class="h5 fw-normal">MAXIMUM TEMPERATURE</p>
                            <p class="h5 fw-normal"><i class="fas fa-cloud pe-2"></i>
                                <%=temp_max%>
                            </p>
                        </div>
                        <div class="d-flex justify-content-between" style="color: #fc9504;">
                            <p class="h5 fw-normal">MINIMUM TEMPERATURE</p>
                            <p class="h5 fw-normal"><i class="fas fa-cloud pe-2"></i>
                                <%=temp_min%>
                            </p>
                        </div>
                    </div>
                </div>

            </div>













            
     
   
 



   
</body>

